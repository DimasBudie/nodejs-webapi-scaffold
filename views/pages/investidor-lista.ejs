<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body class="">
  <div class="wrapper ">
    <div class="sidebar" data-color="white" data-active-color="danger">
      <%- include('../partials/sidebar') %>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
        <%- include('../partials/topbar', {title : 'Investidores'}) %>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="card-header">
                <h4 class="card-title">Investidores Associados</h4>
                <!-- <a class="btn btn-primary" href="/cliente-detalhe/0" role="button">Novo Investidor</a> -->
              </div>
              <div class="card-body">
                <table class="table">
                  <thead class=" text-primary">                    
                    <th>Nome</th>
                    <th>Cpf</th>
                    <th>Taxa(%a.m)</th>
                    <th>Saldo(R$)</th>
                    <th>#</th>
                  </thead>
                  <tbody>
                    <% console.log(list) %>
                      <% list.forEach(item => { %>
                        <tr>
                          <td>
                            <%= item.nome %>
                          </td>
                          <td>
                            <%= item.cpf %>
                          </td>
                          <td>
                            <%= item.taxa %>
                          </td>
                          <td>
                            <%= item.saldo %>
                          </td>
                          <td>
                              <a href="/investidor-detalhe/<%= item._id %>" class="btn btn-primary">Visualizar</a>                              
                            </td>                          
                        </tr>
                        <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer class="footer footer-black  footer-white ">
        <%- include('../partials/footer') %>
      </footer>
    </div>
  </div>
  <%- include('../partials/scripts') %>
    <script>
    </script>
</body>

</html>